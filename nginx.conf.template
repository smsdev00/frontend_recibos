server {
    listen 80;
    server_name localhost;
    root /usr/share/nginx/html;
    index index.html;

    # =========================================================
    # SECURITY HEADERS - Proteccion contra ataques comunes
    # =========================================================

    # Previene clickjacking (iframe embedding)
    add_header X-Frame-Options "DENY" always;

    # Previene MIME type sniffing
    add_header X-Content-Type-Options "nosniff" always;

    # Habilita filtro XSS del navegador
    add_header X-XSS-Protection "1; mode=block" always;

    # Controla informacion enviada en Referer header
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Previene que el sitio sea embebido en otros sitios
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self';" always;

    # Fuerza HTTPS en navegadores (descomentar en produccion con HTTPS)
    # add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Permitir archivos grandes (liquidaciones)
    client_max_body_size 50M;

    # Gzip compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml text/javascript;

    # Proxy para la API
    location /api/ {
        proxy_pass http://${API_HOST}:${API_PORT}/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
    }

    # Proxy para health endpoint
    location /health {
        proxy_pass http://${API_HOST}:${API_PORT}/health;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # Archivos est√°ticos con cache largo
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    # SPA fallback - todas las rutas van a index.html
    location / {
        try_files $uri $uri/ /index.html;
    }
}
